<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParingActivity">

    <LinearLayout
        android:id="@+id/textlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:text="Show Toast">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/gmarketsans_bold"
            android:gravity="center"
            android:text="NEO"
            android:textColor="#2936C3"
            android:textSize="50dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />


        <LinearLayout
            android:id="@+id/Verifylayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical"
            android:text="Show Toast">

            <TextView
                android:id="@+id/text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gmarketsans_bold"
                android:gravity="center_horizontal"
                android:text="TV화면 속 인증 번호\n4자리를 입력하세요"
                android:textColor="#5F5F5F"
                android:textSize="30dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/VerifyEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/login_box"
                android:hint="인증번호 입력"
                android:padding="25dp" />

            <ImageView
                android:id="@+id/account_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_help_outline_24"
                app:layout_constraintTop_toBottomOf="@+id/text_neo"
                tools:ignore="MissingConstraints"></ImageView>

            <TextView
                android:id="@+id/text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/gmarketsans_medium"
                android:gravity="center_horizontal"
                android:text="TV에서 #000 버튼을 눌러서\n인증번호를 받으세요!"
                android:textColor="#5F5F5F"
                android:textSize="20dp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/okbutton_plusfriend"
                android:fontFamily="@font/gmarketsans_medium"
                android:padding="20dp"
                android:text="확인"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/infolayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:text="Show Toast"
            android:visibility="gone">


            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/gmarketsans_medium"
                android:text="TV로 보여질 내이름"
                android:textColor="#5F5F5F"
                android:textSize="20dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/nameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/login_box"
                android:hint="TV에 보여질 이름을 입력하세요."
                android:padding="20dp" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/gmarketsans_medium"
                android:text="상대방 이름"
                android:textColor="#5F5F5F"
                android:textSize="20dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/othernameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/login_box"
                android:hint="상대방 이름을 입력하세요."
                android:padding="20dp" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/gmarketsans_medium"
                android:text="채널 등록"
                android:textColor="#5F5F5F"
                android:textSize="20dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/channelEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/login_box"
                android:hint="채널을 입력하세요."
                android:padding="20dp" />

            <Button
                android:id="@+id/infoBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/text1"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/okbutton_plusfriend"
                android:fontFamily="@font/gmarketsans_medium"
                android:padding="20dp"
                android:text="확인"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>

